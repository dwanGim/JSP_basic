			con = ds.getConnection();
			String sql = "SELECT * FROM preview";
			pstmt = con.prepareStatement(sql);
			
			rs = pstmt.executeQuery();
			
			while(rs.next()) {
				PreviewVO preview = new PreviewVO();
				
